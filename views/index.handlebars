<div class='row z-depth-1' id='burger-header'><h1>Burgers!</h1></div>


<div class ='row'>
  <div class='col s12 m5 l5 z-depth-1' id='serve-burger'>

    <h3>Order the Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="brgr">Burger Name:</label>
        <input type="text" id="brgr" name="name">
      </div>
      {{!-- <button type="submit">Add burger</button> --}}
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">menu_book</i>
  </button>
    </form>
  </div>

  <div class='col m2 l2'></div>

  <div class='col s12 m5 l5 z-depth-1' id='eat-burger'>

    <h3>Serve the Burger</h3>
    <ul>
      {{#each burgers}}
        {{#unless served}}
          {{> burgers/burger-block}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>

<div class='row'>

  <div class='col s12 m12 l12 z-depth-1' id='order-burger'>
    <h3>Eat the Burger</h3>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{#if served}}
            {{> burgers/burger-block}}
          {{/if}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>
